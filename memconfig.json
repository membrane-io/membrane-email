            "params": [
              {
                "name": "email",
                "type": "String"
              }
            ],
            "hints": {}
          },
          {
            "name": "send",
            "description": "Sends an email to the configured address",
            "type": "Void",
            "params": [
              { "name": "subject", "type": "String" },
              { "name": "body", "type": "String" }
            ],
            "hints": {}
          }
        ],
        "fields": [],
        "events": []
      }
    ]
  }
}
